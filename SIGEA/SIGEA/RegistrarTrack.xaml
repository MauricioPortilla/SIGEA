        <Label Content="Registro Track" HorizontalAlignment="Left" Margin="110,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="162" Margin="10,50,0,0" Stroke="Black" VerticalAlignment="Top" Width="324"/>
